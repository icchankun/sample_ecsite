<h2>商品新規登録</h2>
  <div class="container">
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="form-group">
        <label for="item_image">商品画像</label>
        <%= f.file_field :image, id: "item_image", accept: "image/*", class: "form-control-file" %>  
      </div>
      <div class="form-group">
        <label for="item_name">商品名</label>
        <%= f.text_field :name, autofocus: true, class: "form-control", id: "item_name" %>
      </div>
      <div class="form-group">
        <label for="item_caption">商品説明</label>
        <%= f.text_area :caption, class: "form-control", id: "item_caption" %>
      </div>
      <div class="form-group">
        <label for="item_genre">ジャンル</label>
        <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: " --選択してください-- "}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <label for="item_price">税抜価格</label>
        <%= f.text_field :price, class: "form-control", id: "item_price" %>円
      </div>
      <div class="form-group">
        <label for="radio1">販売中</label>
        <%= f.radio_button :is_sold, true, checked: true, id: "radio1" %>
        <label for="radio2">販売停止中</label>
        <%= f.radio_button :is_sold, false, id: "radio2" %>
      </div>
      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
