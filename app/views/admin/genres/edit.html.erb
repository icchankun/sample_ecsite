<h2>ジャンル編集</h2>
<div class="container">
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="genre_name">ジャンル名</label>
      <%= f.text_field :name, class: "form-control", id: "genre_name" %>
    </div>
    <div class="form-group">
      <%= f.submit '変更を保存', class: "form-control btn btn-success" %>
    </div>
  <% end %>
</div>
