<h2>ジャンル一覧・追加</h2>
<div class="container">
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="form-group">
      <label for="genre_title">ジャンル名</label>
      <%= f.text_field :name, class: "form-control", id: "genre_name" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  <% end %>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

