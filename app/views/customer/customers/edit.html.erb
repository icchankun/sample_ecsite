<h2>会員情報編集</h2>
<%= form_with model: current_customer, url: customers_path, method: :patch do |f| %>
<table>
  <tbody>
    <tr class="form-group">
      <th>氏名</th>
      <td><%= f.text_field :first_name, autofocus: true, class: "form-control" %></td>
      <td><%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
    </tr>
    <tr class="form-group">
      <th>フリガナ</th>
      <td><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></td>
      <td><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></td>
    </tr>
    <tr class="form-group">
      <th>郵便番号</th>
      <td><%= f.text_field :post_code, autofocus: true, class: "form-control" %></td>
    </tr>
    <tr class="form-group">
      <th>住所</th>
      <td><%= f.text_field :address, autofocus: true, class: "form-control" %></td>
    </tr>
    <tr class="form-group">
      <th>電話番号</th>
      <td><%= f.text_field :phone_number, autofocus: true, class: "form-control" %></td>
    </tr>
    <tr class="form-group">
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, class: "form-control" %></td>
    </tr>
    <div class="form-group">
      <th></th>
      <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
      <td><%= link_to "退会する", confirm_customers_path, class: "btn  btn-danger" %></td>
    </div>
  </tbody>
</table>
<% end %>