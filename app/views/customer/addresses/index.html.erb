<h2>配送先登録/一覧</h2>
<div class="container">
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <div class="form-group">
      <label for="post_code">郵便番号(ハイフンなし)</label>
      <%= f.text_field :post_code, class: "form-control", id: "post_code" %>
    </div>
    <div class="form-group">
      <label for="place">住所</label>
      <%= f.text_field :place, class: "form-control", id: "place" %>
    </div>
    <div class="form-group">
      <label for="name">宛名</label>
      <%= f.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  <% end %>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.post_code %></td>
          <td><%= address.place %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-sm btn-success' %><%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
