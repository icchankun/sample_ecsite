<h2>配送先編集</h2>
<div class="container">
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <div class="form-group">
      <label for="post_code">郵便番号(ハイフンなし)</label>
      <%= f.text_field :post_code, class: "form-control", id: "post_code" %>
    </div>
    <div class="form-group">
      <label for="place">住所</label>
      <%= f.text_field :place, class: "form-control", id: "place" %>
    </div>
    <div class="form-group">
      <label for="name">宛名</label>
      <%= f.text_field :name, class: "form-control", id: "name" %>
    </div>
    <div class="form-group">
      <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
